generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  username      String
  email         String        @unique
  password      String
  permissions   Permission[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  cartItems     CartItem?
  Order         Order?
  OrderItems    OrderItem?
  WishlistItems WishlistItem?
}

model Item {
  id              String        @id @default(cuid())
  itemName        String
  discountPercent Int
  image1          String
  image2          String
  category        Category
  amount          Int
  newPrice        Int
  description     String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  CartItems       CartItem?
  WishlistItems   WishlistItem?
}

model CartItem {
  id        String   @id @default(cuid())
  quantity  Int      @default(1)
  itemId    String   @unique
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WishlistItem {
  id        String   @id @default(cuid())
  itemId    String   @unique
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model OrderItem {
  id          String   @id @default(cuid())
  itemName    String
  image1      String
  image2      String
  newPrice    Int
  description String
  quantity    Int
  userId      String   @unique
  orderId     String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Order       Order?   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Order {
  id        String     @id @default(cuid())
  total     Int
  userId    String     @unique
  charge    String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     OrderItem?
}

enum Category {
  BAG
  SHOE
  SHIRT
  WRISTWATCH
  DEVICE
}

enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}
